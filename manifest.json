{

    "manifest_version": 2,
    "name": "Nitter Redirect",
    "version": "1.0.0",
  
    "description": "Automatically adds a nitter redirect button to twitter profiles.",
  
    "icons": {
      "48": "icons/icon-48.png"
    },
  
    "content_scripts": [
      {
        "run_at": "document_end",
        "matches": ["*://*.twitter.com/*"],
        "js": ["dist/NitterRedirect.js"],
        "css": ["styles/NitterRedirect.css"]
      }
    ]
  }
  